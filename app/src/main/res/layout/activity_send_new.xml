<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lifi.vlc.Send_new"
    android:background="?attr/colorButtonNormal">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="346dp"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/zero_btn"
        android:layout_alignRight="@+id/zero_btn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="-45dp"
        android:layout_marginRight="-45dp"
        android:fontFamily="arial"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/clr_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:fontFamily="arial"
        android:gravity="center"
        android:text="arial"
        android:textSize="15dp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/zero_btn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/one_btn"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignBottom="@+id/one_btn"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/round_btn"
        android:fontFamily="arial"
        android:text="0"
        android:textStyle="normal|bold"
        android:translationX="20dp" />

    <Button
        android:id="@+id/one_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/round_btn"
        android:fontFamily="arial"
        android:text="1"
        android:textStyle="normal|bold"
        android:translationX="-50dp" />

    <Button
        android:id="@+id/clr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_btn"
        android:layout_alignStart="@+id/one_btn"
        android:layout_alignLeft="@+id/one_btn"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="218dp"
        android:background="@drawable/round_btn"
        android:fontFamily="arial"
        android:text="Limpiar"
        android:textStyle="normal|bold"
        android:translationX="-50dp" />

    <Button
        android:id="@+id/Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:background="@drawable/round_btn"
        android:fontFamily="arial"
        android:text="Enviar"
        android:textStyle="normal|bold" />

</RelativeLayout>
